// Prisma Schema für XSD Review Tool
// Datenbank: MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Benutzer
model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  name         String
  passwordHash String    @map("password_hash")
  createdAt    DateTime  @default(now()) @map("created_at")

  schemas      Schema[]
  schemaGroups SchemaGroup[]
  comments     Comment[]
  replies      Reply[]

  @@map("users")
}

// Schema-Gruppen (zusammengehörige XSD-Dateien)
model SchemaGroup {
  id          Int       @id @default(autoincrement())
  name        String
  version     String
  description String?   @db.Text
  uploadedBy  Int?      @map("uploaded_by")
  createdAt   DateTime  @default(now()) @map("created_at")

  uploader    User?     @relation(fields: [uploadedBy], references: [id])
  schemas     Schema[]
  comments    Comment[]

  @@unique([name, version])
  @@map("schema_groups")
}

// Schemas mit Versionierung
model Schema {
  id         Int       @id @default(autoincrement())
  name       String    // z.B. "FPD_Schema"
  version    String    // z.B. "1.0"
  content    String    @db.LongText // XSD-Inhalt
  uploadedBy Int?      @map("uploaded_by")
  createdAt  DateTime  @default(now()) @map("created_at")

  // Gruppen-Zugehörigkeit (optional für Abwärtskompatibilität)
  groupId    Int?      @map("group_id")
  group      SchemaGroup? @relation(fields: [groupId], references: [id], onDelete: Cascade)
  role       String    @default("standalone") // master, imported, included, standalone
  filename   String?   @db.VarChar(255) // Original-Dateiname

  uploader   User?     @relation(fields: [uploadedBy], references: [id])
  comments   Comment[]

  // Abhängigkeiten
  dependsOn    SchemaDependency[] @relation("DependencySource")
  dependedBy   SchemaDependency[] @relation("DependencyTarget")

  @@unique([name, version, groupId])
  @@index([groupId])
  @@map("schemas")
}

// Abhängigkeiten zwischen Schemas (xs:import, xs:include)
model SchemaDependency {
  id              Int      @id @default(autoincrement())
  sourceSchemaId  Int      @map("source_schema_id")
  targetSchemaId  Int      @map("target_schema_id")
  dependencyType  String   @db.VarChar(50) // import, include
  namespace       String?  @db.VarChar(500)
  schemaLocation  String   @db.VarChar(500)

  sourceSchema    Schema   @relation("DependencySource", fields: [sourceSchemaId], references: [id], onDelete: Cascade)
  targetSchema    Schema   @relation("DependencyTarget", fields: [targetSchemaId], references: [id], onDelete: Cascade)

  @@unique([sourceSchemaId, targetSchemaId, dependencyType])
  @@map("schema_dependencies")
}

// Kommentare zu Schema-Elementen oder Gruppen
model Comment {
  id          Int       @id @default(autoincrement())
  schemaId    Int?      @map("schema_id") // Für Element-Kommentare
  groupId     Int?      @map("group_id")  // Für Gruppen-Kommentare
  xpath       String?   @db.VarChar(500) // XPath zum Element (null bei Gruppen-Kommentaren)
  elementName String?   @map("element_name") @db.VarChar(255)
  commentText String    @map("comment_text") @db.Text
  authorId    Int?      @map("author_id")
  authorName  String?   @map("author_name") @db.VarChar(255)
  status      CommentStatus @default(open)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  schema      Schema?   @relation(fields: [schemaId], references: [id], onDelete: Cascade)
  group       SchemaGroup? @relation(fields: [groupId], references: [id], onDelete: Cascade)
  author      User?     @relation(fields: [authorId], references: [id])
  replies     Reply[]

  @@index([schemaId])
  @@index([groupId])
  @@map("comments")
}

// Antworten auf Kommentare
model Reply {
  id         Int      @id @default(autoincrement())
  commentId  Int      @map("comment_id")
  replyText  String   @map("reply_text") @db.Text
  authorId   Int?     @map("author_id")
  authorName String?  @map("author_name") @db.VarChar(255)
  createdAt  DateTime @default(now()) @map("created_at")

  comment    Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  author     User?    @relation(fields: [authorId], references: [id])

  @@map("replies")
}

enum CommentStatus {
  open
  resolved
}
